<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="main-decorator">
        <section>
            <actions>
                <set field="layoutSettings.styleSheets[+0]" value="/order/assets/bui/1.0.0/css/dpl-min.css"/>
                <set field="layoutSettings.styleSheets[+1]" value="/order/assets/bui/1.0.0/css/bui-min.css"/>
                <set field="layoutSettings.styleSheets[+2]" value="/order/assets/bui/1.0.0/css/main.css"/>

                <set field="layoutSettings.javaScripts[+0]" value="/images/jquery/jquery-1.10.2.min.js"/>
                <set field="layoutSettings.javaScripts[+1]" value="/order/assets/bui/1.0.0/seed-min.js"/>
                <set field="layoutSettings.javaScripts[+2]" value="/order/assets/bui/1.0.0/config.js"/>
            </actions>
            <widgets>
            	<platform-specific>
            		<html><html-template location="component://order/webapp/order/includes/header.ftl"/></html>
            	</platform-specific>
                <decorator-section-include name="body"/>
                <platform-specific>
            		<html><html-template location="component://order/webapp/order/includes/footer.ftl"/></html>
            	</platform-specific>
            </widgets>
        </section>
    </screen>

    <screen name="OrderCommonDecorator">
        <section>
            <actions>
                <set field="layoutSettings.styleSheets[+0]" value="/order/assets/bui/1.0.0/css/dpl-min.css"/>
                <set field="layoutSettings.styleSheets[+1]" value="/order/assets/bui/1.0.0/css/bui-min.css"/>
                <set field="layoutSettings.styleSheets[+2]" value="/order/assets/bui/1.0.0/css/page.css"/>

                <set field="layoutSettings.javaScripts[+0]" value="/images/jquery/jquery-1.10.2.min.js"/>
                <set field="layoutSettings.javaScripts[+1]" value="/order/assets/bui/1.0.0/seed-min.js"/>
                <set field="layoutSettings.javaScripts[+2]" value="/order/assets/bui/1.0.0/config.js"/>
                <set field="layoutSettings.javaScripts[+3]" value="/order/assets/bui/1.0.0/common/page.js"/>
            </actions>
            <widgets>
                <platform-specific>
                    <html><html-template location="component://order/webapp/order/includes/header.ftl"/></html>
                </platform-specific>
                <container style="container">
                    <section>
                        <condition>
                            <if-has-permission permission="ORDER" action="_VIEW"/>
                        </condition>
                        <widgets>
                            <decorator-section-include name="body"/>
                        </widgets>
                        <fail-widgets>
                            <label style="h3">${uiLabelMap.AdminViewPermissionError}</label>
                        </fail-widgets>
                    </section>
                </container>
                <platform-specific>
                    <html><html-template location="component://order/webapp/order/includes/footer.ftl"/></html>
                </platform-specific>
            </widgets>
        </section>
    </screen>
    
   	<screen name="login">
        <section>
            <actions>
                <set field="titleProperty" value="PageTitleLogin" />
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <platform-specific>
		            		<html><html-template location="component://order/webapp/order/common/login.ftl"/></html>
		            	</platform-specific>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
</screens>